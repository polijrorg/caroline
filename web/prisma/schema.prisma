generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model User {
  // nao mexer >
  id            String   @id @map("_id")
  name          String
  sobrenome     String
  dataNasc      DateTime
  email         String   @unique
  emailVerified Boolean?
  image         String?
  role          Role     @default(USER)
  // < nao mexer 

  createdAt DateTime
  updatedAt DateTime
  sessions  Session[]
  accounts  Account[]

  aulasFavoritas AulaFavorita[]

  @@map("user")
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Modulo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo    String
  descricao String?
  ordem     Int      // Ordem sequencial do módulo
  aulas     Aula[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([ordem])
}

enum TipoAula {
  VIDEO
  EXERCICIO
  MARKDOWN
}

model Aula {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  titulo         String
  conteudo       String?
  tipo           TipoAula     @default(MARKDOWN)
  ordem          Int          // Ordem da aula dentro do módulo
  diaDisponivel  Int          // Dia em que a aula fica disponível (contando do cadastro do usuário)
  moduloId       String       @db.ObjectId
  modulo         Modulo       @relation(fields: [moduloId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  aulasFavoritas AulaFavorita[]

  @@unique([moduloId, ordem])
}

model AulaFavorita {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  aulaId    String   @db.ObjectId
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  aula Aula @relation(fields: [aulaId], references: [id])

  @@unique([userId, aulaId])
}

model Faq {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  pergunta  String
  resposta  String
  ordem     Int      // Ordem de exibição
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([ordem])
}
